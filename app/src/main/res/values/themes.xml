        </item> <!-- VARIANT FROM COLORSECONDARY -->
        <item name="colorOnSecondary">@color/black</item> <!-- TEXT/ICON INSIDE COLORSECONDARY -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
