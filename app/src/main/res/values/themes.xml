<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DicodingSubmission" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        /<!-- TOOLBAR/ACTION BAR -->
        <item name="colorPrimaryVariant">@color/yellow_two</item> <!-- STATUS BAR -->
        <item name="colorOnPrimary">@color/white</item> <!-- TEXT/ICON INSIDE COLORPRIMARY -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200
        </item> <!-- MAIN COLOR IN ACTION BAR/ EDIT TEXT COMPONENT -->
